    <script type="text/javascript" language="javascript">
        $(document).ready(function () {
            $('#editor').wysiwyg({
                hotKeys: {
                    'ctrl+b meta+b': 'bold',
                    'ctrl+i meta+i': 'italic',
                    'ctrl+u meta+u': 'underline',
                    'ctrl+z meta+z': 'undo',
                    'ctrl+y meta+y meta+shift+z': 'redo'
                }
            });
            $('#editor').cleanHtml();
        });
</script>


